@model book_store_app_marian.Models.ViewModel

@{
    var relatedProducts = ViewBag.RelatedProducts as List<book_store_app_marian.Models.Products>;
}
@{
    ViewData["Title"] = "Book - " + @Model.Products.First().ProductName;
}
@await Html.PartialAsync("_ErrorMessages")
<div class="product-content product-wrap clearfix product-deatil">
    <div class="row mb-5">
        <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="product-image">
                <div id="myCarousel-2" class="carousel slide">
                    <div id="productCarouselIndicators" class="carousel slide">
                        <div class="carousel-indicators">
                            @{
                                var mainImage = Model.Products.First().ProductImages.FirstOrDefault(p => p.MainImage);
                                var images = Model.Products.First().ProductImages.Where(p => !p.MainImage);
                            }
                            @if (mainImage != null)
                            {
                                <button type="button" data-bs-target="#productCarouselIndicators" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide 0"></button>
                            }
                            @for (var i = 0; i < images.Count(); i++)
                            {

                                if (images.ElementAt(i).MainImage)
                                {
                                    continue;
                                }
                                <button type="button" data-bs-target="#productCarouselIndicators"
                                    data-bs-slide-to="@(i + 1)" aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @if (mainImage != null)
                            {
                                <div class="carousel-item active">
                                    <img src="@mainImage.ProductImage" class="d-block w-100 product-img-wrapper"
                                        alt="Main Image">
                                </div>
                            }

                            @for (var i = 0; i < images.Count(); i++)
                            {
                                if (images.ElementAt(i).MainImage)
                                {
                                    continue;
                                }

                                <div class="carousel-item">
                                    <img src="@images.ElementAt(i).ProductImage" class="d-block w-100 product-img-wrapper"
                                        alt="Other Images">
                                </div>
                            }

                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#productCarouselIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productCarouselIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
            <h2 class="name">
                @Model.Products.First().ProductName
                <small>Author: @Model.Products.First().ProductAuthor</small>
            </h2>
            <hr />
            <h3 class="price-container">
                @Model.Products.First().Price.ToString("C")
                <small>*includes tax</small>
            </h3>
            <div class="certified">
                <ul>
                    <li>
                        <a>Delivery time<span>7 Working Days</span></a>
                    </li>
                </ul>
            </div>
            <hr />
            <div class="description description-tabs">
                <ul id="myTab" class="nav nav-pills">
                    <li class="nav-item"><a href="#more-information" class="nav-link active"
                            data-bs-toggle="tab">Product Description</a></li>
                    <li class="nav-item"><a href="#specifications" class="nav-link"
                            data-bs-toggle="tab">Specifications</a></li>
                    <li class="nav-item"><a href="#reviews" class="nav-link" data-bs-toggle="tab">Reviews</a></li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade show active" id="more-information">
                        <br />
                        <strong>Description</strong>
                        <p>
                            @Model.Products.First().Description
                        </p>
                        <a href="@Url.Action("DownloadBookInfo", "Product", new { id = Model.Products.First().Id })"
                            class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-circle-down"></i> Download
                        </a>
                    </div>
                    <div class="tab-pane fade" id="specifications">
                        <br />
                        <dl class="">
                            <dt>Cover</dt>
                            <dd>Hardcover</dd>
                            <br />

                            <dt>Cover Size</dt>
                            <dd>13.34 x 20.96 cm</dd>
                            <br />

                            <dt>Trimmed Pages</dt>
                            <dd>12.70 x 20.32 cm</dd>
                        </dl>
                    </div>
                    <div class="tab-pane fade" id="reviews">
                        <br />
                        <div class="chat-body no-padding profile-message scrollable-reviews">
                            @{
                                var reviewPosistion = 0;
                                Random random = new Random();
                            }
                            <ul>
                                @foreach (var review in @Model.Products.First().Reviews)
                                {
                                    int randomNumber = random.Next(1, 8);
                                    var avatarImage = "https://bootdey.com/img/Content/avatar/avatar" + @randomNumber +
                                    ".png";
                                    reviewPosistion++;

                                    <li class="message">
                                        <img src="@avatarImage" class="online" />
                                        <span class="message-text">
                                            <a href="javascript:void(0);" class="username">
                                                @review.IdentityUser.UserName
                                                <span class="pull-right">
                                                    @for (var i = 1; i <= review.Rating; i++)
                                                    {
                                                        <i class="fa fa-star fa-2x text-primary"></i>
                                                    }
                                                    @for (var i = review.Rating; i <= 4; i++)
                                                    {
                                                        <i class="fa fa-star fa-2x text-muted"></i>
                                                    }

                                                </span>
                                            </a> <br>
                                            @review.Review
                                        </span>
                                        <ul class="list-inline font-xs">
                                            <li class="pull-right">
                                                <small class="text-muted pull-right ultra-light">
                                                    @review.CreatedTimestamp.ToString("MMMM dd, yyyy") </small>
                                            </li>
                                        </ul>
                                    </li>
                                    @if (reviewPosistion < Model.Products.First().Reviews.Count())
                                    {
                                        <hr>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-sm-12 col-md-6 col-lg-6">
                <form asp-action="Purchase" asp-controller="Product" method="post">
                    <input type="hidden" name="Id" value="@Model.Products.First().Id" />
                    <input type="hidden" name="Price" value="@Model.Products.First().Price" />
                    <button type="submit" class="btn btn-primary btn-lg">Purchase</button>
                </form>

                <!-- Modal -->
                <div class="modal fade" id="PurchaseModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                ...
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="">
        <h2 style="margin-top: 100px">Related Products</h2>
        <div class="row">
            @foreach (var relateProd in relatedProducts)
            {
                var relatedMainImage = relateProd.ProductImages.FirstOrDefault(p => p.MainImage)?.ProductImage;
                <div class="card card-related" style="width: 18rem;">
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@relateProd.Id">
                        <img src="@relatedMainImage" class="card-img-top img-wrapper" alt="@relateProd.ProductName">
                    </a>
                    <div class="card-body">
                        <p class="card-text">@relateProd.ProductName</p>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
