@model ViewModel



@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div class="form-group">
                <label asp-for="categoriesModel.CategoryName" class="control-label"></label>
                <input asp-for="categoriesModel.CategoryName" class="form-control" />
                <span asp-validation-for="categoriesModel.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CategoryList">Back to List</a>
</div>



<h2>Existing Categories</h2>
<ul>
    @foreach (var category in Model.Categories)
    {
        <li>@category.CategoryName</li>
    }
</ul>