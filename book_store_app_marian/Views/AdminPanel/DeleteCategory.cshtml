@model book_store_app_marian.Models.ViewModel

@{
    ViewData["Title"] = "Delete Category " + @Model.categoriesModel.CategoryName;
}

<h2>Delete Category</h2>

<h4>Are you sure you want to delete this category?</h4>
<div>
    <h4>>@Model.categoriesModel.CategoryName</h4>
</div>

<hr />
<div>
 <form asp-action="DeleteCategoryConfirmed" asp-controller="AdminPanel" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.categoriesModel.Id" />
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a asp-action="CategoryList" class="btn btn-secondary">Back to List</a>
        </form>
</div>
