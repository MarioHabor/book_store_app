@{
    ViewData["Title"] = "Role Management - Admin Panel";
}

<h2>Role Management</h2>

<div>
    <h3>Create a new role</h3>
    <form asp-action="CreateRole" method="post">
        <div class="form-group">
            <label for="roleName">Role Name</label>
            <input type="text" class="form-control" name="roleName" id="roleName" placeholder="Enter role name" />
        </div>
        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
</div>

<div>
    <h3>Assign role to a user</h3>
    <form asp-action="AssignRole" method="post">
        <div class="form-group">
            <label for="userId">User ID</label>
            <input type="text" class="form-control" name="userId" id="userId" placeholder="Enter user ID" />
        </div>
        <div class="form-group">
            <label for="roleName">Role Name</label>
            <input type="text" class="form-control" name="roleName" id="roleName" placeholder="Enter role name" />
        </div>
        <button type="submit" class="btn btn-primary">Assign Role</button>
    </form>
</div>

<div>
    <h3>Users List</h3>
    <a class="btn btn-primary" asp-action="UserList">View Users</a>
</div>